        .post-header-title {
            max-width: calc(var(--post-header-title-size) - var(--profile-image-size) - var(--platform-logo-size) - 2 * var(--gap)) !important;
        }

        .post-header-subtext {
            max-width: calc(var(--post-header-title-size) - var(--profile-image-size) - var(--platform-logo-size) - 2 * var(--gap)) !important;
        }
    }

    .post-header-profile {
        display: flex;
        align-items: center;
        gap: var(--gap);
        width: auto;
        text-overflow: ellipsis;
        overflow: hidden;
        white-space: nowrap;
    }

    .profile-image {
        border-radius: 50%;
        width: var(--profile-image-size);
        height: var(--profile-image-size);
    }

    .post-header-profile-info {
        display: flex;
        flex-direction: column;
        justify-content: center;
        width: auto;
    }

    .post-header-title {
        display: flex;
        flex-direction: row;
        align-items: center;
        width: auto;
        max-width: var(--post-header-title-size);
        gap: var(--gap-little);
    }

    .post-header-title-text {
        margin: unset;
        font-weight: bold;
        font-size: var(--font-size-text);
        color: var(--text-color);
        text-overflow: ellipsis;
        overflow: hidden;
        white-space: nowrap;
    }

    .post-header-title-icon {
        max-width: var(--icon-protected-account-size);
        min-width: var(--icon-protected-account-size);
        max-height: var(--icon-protected-account-size);
        min-height: var(--icon-protected-account-size);
        fill: var(--text-color);
    }

    .post-header-subtext {
        margin: unset;
        width: auto;
        max-width: var(--post-header-title-size);
        font-size: var(--font-size-subtext);
        color: var(--text-color-secondary);
        text-overflow: ellipsis;
        overflow: hidden;
        white-space: nowrap;
    }

    .platform-logo {
        width: var(--platform-logo-size);
        height: var(--platform-logo-size);
        fill: var(--platform-logo-color);
        opacity: var(--secondary-opacity);

    }

    .platform-logo.colored-platform-logo {
        opacity: unset;
    }

    .platform-logo img {
        width: 100%;
        height: 100%;
    }

    .post-body {
        --content-area-width: var(--main-container-size);
        display: flex;
        width: 100%;
        gap: var(--gap);
    }

    .post-body:has(.thread-line) {
        --content-area-width: calc(var(--main-container-size) - var(--profile-image-size));

        .content-area * {
            max-width: var(--content-area-width) !important;
            min-width: var(--content-area-width) !important;
        }
    }

    .thread-line {
        transform: rotate(180deg);
        background-color: var(--transparent);
        display: flex;
        flex-direction: column;
        overflow: hidden;
        align-items: center;
        justify-content: center;
        width: var(--profile-image-size);
        padding: var(--padding-little) 0;
    }

    .line {
        background-color: var(--line-color);
        width: var(--thread-line-width);
        flex: 1;
    }

    .post-content {
        align-self: start;
        display: flex;
        flex-direction: column;
        justify-content: start;
        flex: 1;
    }

    .post-content-divider {
        margin: var(--half-padding) 0;
        border: 1px solid var(--line-color);
        width: 100%;
    }

    .content-area {
        align-self: stretch;
        display: flex;
        flex-direction: column;
        align-items: start;
        justify-content: start;
        width: 100%;
        flex: 1;
    }

    .content-area * {
        margin: var(--margin) 0 0 0;
        width: 100%;
        word-wrap: break-word;
        max-width: var(--content-area-width);
        min-width: var(--content-area-width);
    }

