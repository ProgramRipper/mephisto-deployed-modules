            max-width: calc(var(--post-header-title-size) - var(--profile-image-size) - var(--gap)) !important;
        }
    }

    .post-header:has(.profile-image) {
        .post-header-title {
            max-width: calc(var(--post-header-title-size) - var(--profile-image-size) - var(--gap)) !important;
        }

        .post-header-subtext {
            max-width: calc(var(--post-header-title-size) - var(--profile-image-size) - var(--gap)) !important;
        }
    }

