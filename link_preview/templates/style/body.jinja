        --embed-area-width: calc(var(--content-area-width) - 2 * var(--padding)) !important;
        max-width: unset;
        min-width: unset;
        display: flex;
        flex-direction: column;
        align-items: start;
        justify-content: start;
        width: var(--embed-area-width);
        padding: var(--padding);
        border: 2px solid var(--line-color);
        border-radius: var(--roundness);
    }

    .content-type-embed-post .content-area {
        --content-area-width: var(--embed-area-width);
        margin: unset;
    }

    .content-area-embed-post * {
        margin: unset;
    }

    .embed-post-header {
        display: flex;
        flex-direction: row;
        align-items: center;
        gap: var(--gap);
        margin: unset;
        max-width: var(--embed-area-width);
    }

    .embed-post-header * {
        min-width: unset;
        min-height: unset;
        margin: unset;
    }

    .embed-post-header-profile-image {
        border-radius: 50%;
        width: var(--embed-profile-image-size);
        height: var(--embed-profile-image-size);
    }

    .embed-post-header-profile-name {
        font-weight: bold;
        font-size: var(--font-size-text);
        color: var(--text-color);
        max-width: calc(var(--embed-area-width) - var(--embed-profile-image-size) - var(--gap));
        text-overflow: ellipsis;
        overflow: hidden;
        white-space: nowrap;
    }

    .content-type-title {
        font-size: var(--font-size-title);
        color: var(--text-color);
    }

    .content-type-text {
        font-size: var(--font-size-text);
        color: var(--text-color);
    }

    .content-type-text + .content-type-text {
        margin-top: calc(var(--margin) / 4);
    }

    .content-type-title + .content-type-text {
        margin-top: calc(var(--margin) / 3);
    }

    .content-type-hyperlink {
        color: var(--hyperlink-color);
        text-decoration: none;
    }

    .content-type-highlight {
        background: var(--highlight-color);
        box-decoration-break: clone;
    }

    .content-type-underline {
        text-decoration: underline;
    }

    .content-type-bold {
        font-weight: bold;
    }

    .content-type-italic {
        font-style: italic;
    }

    .content-type-strikethrough {
        text-decoration: line-through;
    }

    .content-type-photo {
        border-radius: var(--roundness);
    }

    .content-type-error {
        color: var(--error-color);
        font-size: var(--font-size-text);
        border: 1px solid var(--error-color);
        border-radius: var(--roundness);
        padding: var(--content-type-error-padding) 0;
        display: flex;
        justify-content: center;
    }

    .content-type-warning {
        color: var(--warning-color);
        font-size: var(--font-size-text);
        border: 1px solid var(--warning-color);
        border-radius: var(--roundness);
        padding: var(--content-type-error-padding) 0;
        display: flex;
        justify-content: center;
    }

    .content-type-hr {
        border: 1px solid var(--line-color);
        width: 100%;
    }

    .content-type-tag-container {
        display: flex;
        flex-wrap: wrap;
        align-items: start;
        justify-content: left;
        flex: 1;
        gap: var(--content-type-tag-container-gap);
    }

    .content-type-tag {
        margin: unset;
        width: fit-content;
        background-color: var(--tag-color);
        border-radius: var(--roundness);
        padding: var(--content-type-tag-padding-top-bottom) var(--content-type-tag-padding-sides);
        font-size: var(--font-size-subtext);
        color: var(--tag-text-color);
        max-width: calc(var(--content-area-width) - 2 * var(--content-type-tag-padding-sides)) !important;
        min-width: unset !important;
    }

    .content-type-video {
        position: relative;
        display: flex;
        width: 100%;
    }

    .content-type-video .content-type-video-thumbnail {
        margin: unset;
        width: 100%;
        border-radius: var(--roundness);
    }

    .content-type-video .content-type-video-info {
        width: fit-content;
        min-width: unset;
        margin: unset;
        position: absolute;
        right: var(--gap);
        bottom: var(--gap);
        background-color: var(--tag-color);
        border-radius: var(--roundness);
        padding: var(--content-type-tag-padding-top-bottom) var(--content-type-tag-padding-sides);
        font-size: var(--font-size-subtext);
        color: var(--tag-text-color);
    }

